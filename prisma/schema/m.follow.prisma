model Follow {
    followerId  String
    followingId String

    follower  Profile @relation("FollowerToFollowed", references: [id], fields: [followerId], onDelete: Cascade)
    following Profile @relation("FollowedToFollower", references: [id], fields: [followingId], onDelete: Cascade)

    @@unique([followerId, followingId])
    @@index([followerId])
    @@index([followingId])
}
